<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phép tất cả traffic (HTTP và HTTPS) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user-added certificates (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Cấu hình riêng cho domain api.socdo.vn -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api.socdo.vn</domain>
        <domain includeSubdomains="true">socdo.vn</domain>
        <domain includeSubdomains="true">www.socdo.vn</domain>
    </domain-config>
</network-security-config>

